{
	"name": "instaclone",
	"version": "0.0.1",
	"private": true,
	"author": "NiketanG",
	"scripts": {
		"android": "react-native run-android",
		"ios": "react-native run-ios",
		"web:start": "react-app-rewired start",
		"start": "react-native start",
		"lint": "eslint . --ext .js,.jsx,.ts,.tsx",
		"type-check": "tsc --pretty --noEmit",
		"format": "prettier --write",
		"android:release": "cd android && ./gradlew assembleRelease && cd ../ && mv android/app/build/outputs/apk/release/app-release.apk build/app-release.apk && adb install build/app-release.apk "
	},
	"dependencies": {
		"@react-native-async-storage/async-storage": "^1.15.5",
		"@react-native-community/google-signin": "^5.0.0",
		"@react-native-community/masked-view": "^0.1.11",
		"@react-navigation/bottom-tabs": "^5.11.11",
		"@react-navigation/material-top-tabs": "^5.3.15",
		"@react-navigation/native": "^5.9.4",
		"@react-navigation/stack": "^5.14.5",
		"@supabase/supabase-js": "^1.20.0",
		"date-fns": "^2.22.1",
		"mobx": "^6.3.2",
		"mobx-react-lite": "^3.2.0",
		"mobx-state-tree": "^5.0.2",
		"react": "17.0.2",
		"react-native": "0.64.2",
		"react-native-config": "^1.4.2",
		"react-native-gesture-handler": "^1.10.3",
		"react-native-image-crop-picker": "^0.36.2",
		"react-native-pager-view": "^5.2.1",
		"react-native-paper": "^4.9.2",
		"react-native-reanimated": "^2.2.0",
		"react-native-safe-area-context": "^3.2.0",
		"react-native-screens": "^3.4.0",
		"react-native-svg": "^12.1.1",
		"react-native-tab-view": "^3.0.1",
		"react-native-url-polyfill": "^1.3.0",
		"react-native-vector-icons": "^8.1.0",
		"reanimated-bottom-sheet": "^1.0.0-alpha.22",
		"use-memo-one": "^1.1.2"
	},
	"devDependencies": {
		"@babel/core": "^7.14.6",
		"@babel/runtime": "^7.14.6",
		"@react-native-community/eslint-config": "^3.0.0",
		"@types/react": "^17.0.14",
		"@types/react-native": "^0.64.12",
		"@types/react-native-vector-icons": "^6.4.8",
		"@typescript-eslint/eslint-plugin": "^4.28.4",
		"@typescript-eslint/parser": "^4.28.4",
		"eslint": "^7.31.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^3.4.0",
		"husky": "^7.0.1",
		"lint-staged": "^11.0.1",
		"metro-react-native-babel-preset": "^0.66.1",
		"prettier": "^2.3.2",
		"typescript": "^4.3.5"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"pre-push": "yarn run type-check"
		}
	},
	"lint-staged": {
		"*.@(ts|tsx)": [
			"yarn lint",
			"yarn format"
		]
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	}
}
